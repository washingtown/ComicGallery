@page "{id:int}"
@model ComicGallery.Pages.Manage.EditUserModel
@{
    ViewData["Title"] = "编辑用户";
}
<div class="row">
    <div class="col-md-6">
        <div class="card card-primary">
            <form id="add-user-form" method="post">
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>用户名</label>
                        <input class="form-control" disabled asp-for="Input.UserName" />
                        <span asp-validation-for="Input.UserName"></span>
                    </div>
                    <div class="form-group">
                        <label>角色</label>
                        <select class="form-control" asp-for="Input.RoleName" asp-items="Model.Roles"></select>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary">确定</button>
                        <a class="btn btn-default" asp-page="/Manage/Users">取消</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>